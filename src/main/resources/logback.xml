<configuration debug="true" scan="true">

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{ISO8601} [%thread] %-5level %class{36}:%M\(%L\) - %msg %ex%n</pattern>
		</encoder>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="console"/>
	</root>
</configuration>
